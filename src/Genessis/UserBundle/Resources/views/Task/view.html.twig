{% extends 'layout.html.twig' %}
{% block title %}
view task view
{% endblock %}
{% block body %}
{{ parent() }}
	<div class="container well">
		<div class="col-md-9">
			<h2>{{ task.title }}</h2>
			<br>
			<dl class="row">
				<div class="col-md-6">
					<dt>{{ 'Description'|trans }}</dt>
					<dd>
						{{ task.description }}
						{# &nbsp; #}
					</dd>
					<br>
					<dt>{{ 'User'|trans }}</dt>
					<dd>
						{{ user.fullName }}
						{# &nbsp; #}
					</dd>
					<br>
					<dt>{{ 'Status'|trans }}</dt>
					<dd>
						{% if task.status == 0 %}
							<span class="text-danger">{{ 'Waiting'|trans }}</span>
						{% elseif task.status == 1 %}
							<span class="text-success">{{ 'Finish'|trans }}</span>
						{% endif %}	
						{# &nbsp; #}
					</dd>
					<br>
				</div>
				<div class="col-md-6">
					<dt>{{ 'Created'|trans }}</dt>
					<dd>
						{{ task.createdAt|date('d-m-Y H:i') }}
						{# &nbsp; #}
					</dd>
					<br>
					<dt>{{ 'Updated'|trans }}</dt>
					<dd>
						{{ task.updatedAt|date('d-m-Y H:i') }}
						{# &nbsp; #}
					</dd>
					<br>
				</div>
			</dl>
		</div>
		<div class="col-md-3">
			<h3>{{'Actions'|trans}}:</h3>
			<p>
				<a href="#" class="btn btn-info btn-lg btn-block">
					<span class="glyphicon glyphicon-comment"></span>
					{{'Leave a comment'|trans}}
				</a>
			</p>
			{% if is_granted('ROLE_ADMIN') %}
				<p>
					<a href="{{ path('genessis_task_edit', {id:task.id}) }}" class="btn btn-success btn-lg btn-block">
						<span class="glyphicon glyphicon-edit"></span>
						{{'Edit task'|trans}}
					</a>
				</p>
				<p>
					{{ include('GenessisUserBundle:Task:forms/form.html.twig', {form:delete_form, message:'Are you sure?'|trans}) }}
				</p>
			{% endif %}
		</div>
	</div>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="page-header">
				<h2>{{ 'New comment'|trans }}</h2>
			</div>
			{{ form_start(commentForm, {'attr':{'role':'form', 'novalidate':'novalidate'}}) }}
				<h4 class="text-danger">{{ form_errors(commentForm) }}</h4>
				<fieldset>
					<div class="form-group">
						{{ form_label(commentForm.content) }}
						{{ form_widget(commentForm.content, {'attr':{'class':'form-control', 'placeholder':'Comment content'}}) }}
						<span class="text-danger">{{ form_errors(commentForm.content) }}</span>
					</div>
				</fieldset>
				<p>
					{{ form_widget(commentForm.save, {'label':'Add comment', 'attr':{'class':'btn btn-success'}}) }}
				</p>
			{{ form_end(commentForm) }}
		</div>
	</div>
{% endblock %}