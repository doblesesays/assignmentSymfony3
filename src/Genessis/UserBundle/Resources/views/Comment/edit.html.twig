{% extends 'layout.html.twig' %}
{% block title %}
edit comment view
{% endblock %}
{% block body %}
{{ parent() }}
{{ include('GenessisUserBundle:Comment:messages/success.html.twig') }}
	<div class="main container">
		<div class="row well">
			<div class="col-md-6 col-md-offset-3">
				<div class="page-header">
					<h2>{{'Edit comment for task'|trans}} {{ comment.task.title }}</h2>
				</div>
				{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'role' : 'form'}}) }}
				    <h4 class="text-danger">{{ form_errors(form) }}</h4>
					<fieldset>
					    <div class="form-group">
					        {{ form_label(form.content) }}
					        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder' : 'Comment content'}}) }}
					        <span class="text-danger">{{ form_errors(form.content) }}</span>
					    </div>
					</fieldset>
				    <p>
				        {{ form_widget(form.save, {'label' : 'Update comment', 'attr': {'class': 'btn btn-success'}}) }}

				        <a href="{{ path('genessis_task_view', {id:comment.task.id}) }}" class="btn btn-primary pull-right">{{'Back to task'|trans}}</a>
				    </p>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}